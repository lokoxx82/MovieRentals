@using MovieRentals.Models
@model MovieRentals.ViewModels.CustomersViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Customers.Count() == 0)
{
    <p> We dont have eny customers yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Discount rate</th>
        </tr>
        </thead>
        <tbody>
            @foreach (Customer customer in Model.Customers)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name,"Detail","Customers", new {customer.Id},null)</td>
                    <td>@customer.MembershipType.Name</td>
                </tr>
            }
        </tbody>

    </table>

}



